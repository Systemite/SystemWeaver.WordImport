<Window x:Class="SystemWeaver.WordImport.Windows.WindowLoadingProgress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Title="Loading" Height="125" Width="300" MinHeight="125" MinWidth="300" ResizeMode="NoResize"
	WindowStyle="None" BorderThickness="1">
    <Grid VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Name="textBlockStatus" Text="{Binding Status}" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,5" />
        <ProgressBar Name="progress" Grid.Row="1" IsIndeterminate="False" Height="20" Width="200" Minimum="0" Maximum="100" VerticalAlignment="Center" HorizontalAlignment="Center" />
    </Grid>
</Window>
